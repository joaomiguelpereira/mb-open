<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with type="com.medibooking.admin.client.view.resources.GlobalResources" field="res"></ui:with>
			
		<g:HTMLPanel ui:styleName="{res.editorCss.editorContainer}">


		<table border="0" class="{res.editorCss.editorTable}">
			<tr>
				<td class="{res.editorCss.labelContainer}">
					<g:Label>Nome:*</g:Label>
				</td>
				<td class="{res.editorCss.leftAligned}">
					<g:TextBox ui:field="name" />
					<g:Image styleName="{res.editorCss.errorIndicator}" resource="{res.attentionIcon}"/>
					<div class="{res.editorCss.errorMsg}">teste error message</div>
				</td>
			</tr>

			<tr>
				<td class="{res.editorCss.labelContainer}">
					<g:Label>Email:</g:Label>
				</td>
				<td class="{res.editorCss.leftAligned}">
					<g:TextBox ui:field="email" />
				</td>
			</tr>

			<tr>
				<td class="{res.editorCss.labelContainer}">
					<g:Label>Confirmação do email:</g:Label>
				</td>
				<td class="{res.editorCss.leftAligned}">
					<g:TextBox ui:field="emailConfirmation" />
				</td>
			</tr>

			<tr>
				<td class="{res.editorCss.labelContainer}">
					<g:Label>Morada:</g:Label>
				</td>
				<td class="{res.editorCss.leftAligned}">
					<g:TextArea ui:field="address" />
				</td>
			</tr>


			<tr>
				<td class="{res.editorCss.labelContainer}">
					<g:Label>Telefone:</g:Label>
				</td>
				<td class="{res.editorCss.leftAligned}">
					<g:TextBox ui:field="phone" />
				</td>
			</tr>

			<tr>
				<td class="{res.editorCss.labelContainer}">
					<g:Label>Password:</g:Label>
				</td>
				<td class="{res.editorCss.leftAligned}">
					<g:PasswordTextBox ui:field="password" />
				</td>
			</tr>
			<tr>
				<td class="{res.editorCss.labelContainer}">
					<g:Label>Confirmação de password:</g:Label>
				</td>
				<td class="{res.editorCss.leftAligned}">
					<g:PasswordTextBox ui:field="passwordConfirmation" />
				</td>
			</tr>
			<tr>
				<td class="{res.editorCss.labelContainer}">


				</td>
				<td class="{res.editorCss.leftAligned}">
					<g:CheckBox ui:field="termsAgreement">
						Li e aceito os termos e condições
					</g:CheckBox>
				</td>
			</tr>
			<tr>
				<td class="{res.editorCss.labelContainer}">

				</td>
				<td class="{res.editorCss.leftAligned} {res.editorCss.buttonArea} ">


					<g:Button ui:field="submit">Registar</g:Button>
				</td>
			</tr>

		</table>
	</g:HTMLPanel>
</ui:UiBinder> 